@model A15147442_API.ViewModels.DepartamentoViewModel
@using A15147442_ENT.Entities

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar Departamentos</h2>

@using (Html.BeginForm("SaveDepartamentos", "departamentos"))
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(m => m.Departamento.Descripcion)
        @Html.TextBoxFor(m => m.Departamento.Descripcion, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Departamento.Descripcion)
    </div>



    @Html.HiddenFor(m => m.Departamento.DepartamentoId);

    <button type="submit" class="btn btn-primary">
        Guardar
    </button>
}
