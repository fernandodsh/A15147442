@model IEnumerable<A15147442_ENT.Entities.Trabajador>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Agregar", "New")
</p>

<table id="tbl_trabajadores" class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>DNI</th>
            <th>Fecha De Contrato</th>
            <th>Tipo De Trabajador</th>
            <th>Editar</th>
            <th>Detalles</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody></tbody>


</table>

@section scripts
{
    <script>
        $(document)
         .ready(function () {
             var table =  $("#tbl_trabajadores")
              .DataTable({
                  ajax: {
                      url: "/api/Trabajadores",
                      dataSrc: ""
                  },
                  columns: [
                      { data: "Nombre" },
                      { data: "Apellido" },
                      { data: "DNI" },
                      { data: "FechaInicioContrato" },
                      { data: "TipoTrabajador" },
                      {
                          data: "TrabajadorId",
                          render: function (data, type, trabajadores) {
                              return "<a href='/Trabajadores/edit/"+data+"'>Actualizar</a>";
                          }
                      },
                      {
                          data: "TrabajadorId",
                          render: function (data, type, trabajadores) {
                              return "<a href='/Trabajadores/details/" + data + "'>Detalles</a>";
                          }
                      },
                      {
                          data: "TrabajadorId",
                          render: function (data) {
                              return "<button class= 'btn btn-link js-delete' data-Trabajadores-id=" + data + ">Borrar</button>";
                          }
                      }


                  ]

              });
        });
    </script>
}


